<UserControl x:Class="TRMDesktopUI.Views.StatusInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRMDesktopUI.Views"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="Header" FontSize="16" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="Message" FontSize="14" Margin="10"/>
            <Button x:Name="Close" Padding="5" Margin="10" Width="100" Height="25">Close</Button>
        </StackPanel>
    </Grid>
</UserControl>
